<!-- including header files -->
<%- include("./partials/header.ejs") %>

<div class="container">
  <div class="row">
    <div class="col-sm-6 mt-5">
      <h2 class="alert alert-success text-center">Add New Student</h2>
      <form action="" method="post">
        <div class="mb-2">
          <label for="name" class="form-label">Name</label>
          <input type="text" class="form-control" id="name" name="name" />
        </div>
        <div class="mb-2">
          <label for="age" class="form-label">Age</label>
          <input type="text" class="form-control" id="age" name="age" />
        </div>
        <div class="mb-2">
          <label for="fees" class="form-label">Fees</label>
          <input type="text" class="form-control" id="fees" name="fees" />
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
      </form>
    </div>
    <div class="col-sm-6 mt-5">
      <h2 class="alert alert-danger text-center">List of Student</h2>
      <!-- <%# show All Data %> -->
      <table class="table table-striped table-hover">
        <thead class="bg-info">
          <tr>
            <th scope="col">No.</th>
            <th scope="col">Name</th>
            <th scope="col">Age</th>
            <th scope="col">Fees</th>
            <th scope="col">Action</th>
          </tr>
        </thead>
        <tbody>
          <% var i=1 %> <% data.forEach((item)=>{ %>
          <tr>
            <td><%= i++ %></td>
            <td><%= item.name %></td>
            <td><%= item.age %></td>
            <td><%= item.fees %></td>
            <td>
              <form action="/student/edit/<%= item._id%>" method="get" class="d-inline">
                <button class="btn" type="submit">
                    <i class="material-symbols-outlined text-center text-primary">
                        update
                      </i>
                </button>
              </form>
              <form action="/student/delete/<%= item._id%>" class="d-inline" method="post">
                <button class="btn">
                    <i class="material-symbols-outlined text-center text-danger">
                        delete
                      </i>
                </button>
              </form>
            </td>
          </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </div>
</div>

<!-- including footer files -->
<%- include('./partials/footer.ejs') %>
